<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signIN">

    <ImageView
        android:id="@+id/googleicon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.319" />

    <ImageButton
        android:id="@+id/knopka"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:background="@drawable/enter_in_app"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.556" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/knopka"
        app:layout_constraintStart_toStartOf="@id/knopka"
        app:layout_constraintEnd_toEndOf="@id/knopka"
        app:layout_constraintBottom_toBottomOf="@id/knopka"
        android:fontFamily="@font/montserrat"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:text="Войти с помощью Google"
        />

</androidx.constraintlayout.widget.ConstraintLayout>